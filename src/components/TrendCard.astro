---
import { Card, Image } from "react-bootstrap";
import CardSection from "./CardSection.astro";
import RowCol from "./RowCol.astro";

const { id, name, imgSrc } = Astro.props;
---

<RowCol className="trend-card mt-5 border-start border-secondary">
    <Card className="border-0">
        <Card.Body>
            <Card.Title id={id} as="h3">{name}</Card.Title>
            {
                imgSrc && (
                    <Image fluid className="rounded border-dark border" src={imgSrc} alt={name} />
                )
            }
            <Card.Text>
                <slot name="overview" />
            </Card.Text>
            <CardSection name="Pros">
                <slot name="pros" />
            </CardSection>
            <CardSection name="Cons">
                <slot name="cons" />
            </CardSection>
            <CardSection name="More Info">
                <slot name="more-info" />
            </CardSection>
        </Card.Body>
    </Card>
</RowCol>
